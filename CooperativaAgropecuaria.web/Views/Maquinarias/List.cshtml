@{
}

@model List<CooperativaAgropecuaria.web.Models.Entities.Maquinaria>

@{
    ViewData["Title"] = "Lista de Maquinarias";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Lista de Maquinarias</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Add" class="btn btn-primary">Agregar Maquinaria</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Costo por Hora</th>
                    <th scope="col">Agricultor</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var maquinaria in Model)
                    {
                        <tr>
                            <td>@maquinaria.Id</td>
                            <td>@maquinaria.Nombre</td>
                            <td>@maquinaria.Tipo</td>
                            <td>$@maquinaria.CostoHora</td>
                            <td>@(maquinaria.Agricultor != null ? maquinaria.Agricultor.Nombre : "No asignado")</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-controller="Maquinarias" asp-action="Edit" asp-route-id="@maquinaria.Id">Editar</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No hay maquinarias registradas</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

