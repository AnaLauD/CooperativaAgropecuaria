@model CooperativaAgropecuaria.web.Models.AddMaquinariaViewModel

@{
    ViewData["Title"] = "Agregar Maquinaria";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Agregar Maquinaria</h2>

    <form asp-action="Add" method="post" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre de la Máquina</label>
            <input asp-for="Nombre" class="form-control" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Tipo" class="form-label">Tipo de Máquina</label>
            <input asp-for="Tipo" class="form-control" required />
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CostoHora" class="form-label">Costo por hora</label>
            <input asp-for="CostoHora" class="form-control" required />
            <span asp-validation-for="CostoHora" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AgricultorId" class="form-label">Seleccionar Agricultor</label>
            @if (Model.Agricultores != null && Model.Agricultores.Any())
            {
                <select asp-for="AgricultorId" asp-items="Model.Agricultores" class="form-select" required>
                    <option value="">Seleccione un agricultor</option>
                </select>
            }
            else
            {
                <p class="text-danger">No hay agricultores disponibles.</p>
            }
            <span asp-validation-for="AgricultorId" class="text-danger"></span>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="List" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
