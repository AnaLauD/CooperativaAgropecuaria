@{
}

@{
    ViewData["Title"] = "Editar Agricultor";
}

@model CooperativaAgropecuaria.web.Models.Entities.Agricultor

@if (Model is null)
{
    <p>No se encontro ningun agricultor con el ID seleccionado.</p>
}
else
{
    <div class="container mt-4">
        <h2 class="mb-4 text-center">Agregar Agricultor</h2>
 
        <div class="card shadow-lg p-4">
            <form method="post">

                <div class="mb-3">
                    <label for="id" class="form-label">Id:</label>
                    <input type="text" id="id" name="id" class="form-control" asp-for="Id" readonly />
                </div>

                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <input type="text" id="nombre" name="Nombre" class="form-control" asp-for="Nombre" required />
                </div>

                <div class="mb-3">
                    <label for="tamanoCampo" class="form-label">Tamaño del Campo:</label>
                    <input type="text" id="tamanoCampo" name="TamanoCampo" class="form-control" asp-for="TamanoCampo" required />
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Editar</button>
                    <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Agricultores">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
}



