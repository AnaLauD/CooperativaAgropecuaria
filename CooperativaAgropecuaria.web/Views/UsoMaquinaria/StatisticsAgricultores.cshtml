@model List<CooperativaAgropecuaria.web.Models.EstadisticasAgricultorViewModel>

@{
    ViewData["Title"] = "Estadísticas de Uso por Agricultores";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Estadísticas de Uso por Agricultores</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre del Agricultor</th>
                <th>Horas de Uso Total</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                var index = 1;
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(index++)</td>
                        <td>@item.NombreAgricultor</td>
                        <td>@item.TotalHorasUso</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-danger">No hay datos disponibles.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

